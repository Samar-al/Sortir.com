{% extends 'base.html.twig' %}

{% block title %}Détails du Groupe -
	{{ group.name }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<div class="text-center mb-4">
			<h1 class="display-5">{{ group.name }}</h1>
		</div>

		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card shadow-sm p-4">
					<h5 class="card-title">Créateur du groupe</h5>
					<p class="card-text">
						<strong>{{ group.owner.firstname }}
							{{ group.owner.lastname }}</strong>
					</p>

					<h5 class="card-title">Nombre de membres</h5>
					<p class="card-text">
						{{ group.members|length }}
						membres
					</p>

					<h5 class="card-title">Membres du groupe</h5>
					<ul class="list-group mb-4">
						{% for member in group.members %}
							<li class="list-group-item d-flex justify-content-between align-items-center">
								<span>{{ member.firstname }}
									{{ member.lastname }}</span>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>

		<div class="text-center mt-4">
			<a href="{{ path('app_group_index') }}" class="btn btn-secondary">Retour à la liste</a>
		</div>
	</div>
{% endblock %}
