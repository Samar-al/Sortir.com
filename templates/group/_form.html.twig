<div class="row my-4">
	<div class="col-6 offset-3">
		{{ form_start(form) }}

		<!-- Render the other form fields here -->
		{{ form_widget(form) }}

		<!-- Participants Selection List -->
		<div class="container my-4">
			<div
				class="list-group" style="max-height: 300px; overflow-y: auto;">
				{# Set the max height and enable scrolling #}
				{% for participant in participants %}
					<div class="list-group-item d-flex justify-content-between align-items-center">
						<span>{{ participant.username }}</span>
						<button type="button" class="btn btn-outline-success add-participant-btn" data-id="{{ participant.id }}">
							Add
						</button>
					</div>
				{% else %}
					<div class="list-group-item">No participants found.</div>
				{% endfor %}
			</div>
		</div>

		<!-- Hidden input to store selected participants -->
		<input
		type="hidden" name="selected_members" id="selected_members" value="">

		<!-- Submit Button -->
		<div class="text-center my-4">
			<button class="btn btn-primary">Cr√©er le groupe</button>
		</div>

		{{ form_end(form) }}
	</div>
</div>
