{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
 {% include "fragments/_nav.html.twig" %}
<div class="container my-4">
    <div class="text-center mb-4">
        <h1 class="display-5">Location Details</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>{{ location.name }}</h4>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th>ID</th>
                                <td>{{ location.id }}</td>
                            </tr>
                            <tr>
                                <th>Nom</th>
                                <td>{{ location.name }}</td>
                            </tr>
                            <tr>
                                <th>Latitude</th>
                                <td>{{ location.latitude }}</td>
                            </tr>
                            <tr>
                                <th>Longitude</th>
                                <td>{{ location.longitude }}</td>
                            </tr>
                            <tr>
                                <th>Num√©ro de rue</th>
                                <td>{{ location.streetNumber }}</td>
                            </tr>
                            <tr>
                                <th>Nom de rue</th>
                                <td>{{ location.streetName }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-center">
                    <div><a href="{{ path('app_location_index') }}" class="btn btn-outline-primary"><i class="bi bi-arrow-return-left"></i></a></div>
                    <div><a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-outline-warning mx-2"><i class="bi bi-pencil"></i></a></div>
                    {% if not hasTrip %}
                        <div>{{ include('location/_delete_form.html.twig') }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
